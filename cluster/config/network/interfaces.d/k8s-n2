auto eno4
iface eno4 inet static
    address 10.2.0.2/16
    gateway 10.2.255.254
    dns-nameservers 172.16.0.1
    dns-search k8s.fnptr.net

auto eno2
iface eno2 inet static
    address 10.4.0.2/16

allow-ovsbr0 bond0
iface bond0 inet static
	ovs_type OVSBond
	ovs_options bond_mode=balance-tcp lacp=active other_config:lacp-time=fast tag=1 vlan_mode=native-untagged
	ovs_bonds enp68s0f0 enp68s0f1 enp68s0f2 enp68s0f3
	ovs_bridge ovsbr0

allow-ovs ovsbr0
iface ovsbr0 inet static
	ovs_type OVSBridge
	ovs_ports bond0

allow-ovsbr0 coresvcs
iface coresvcs inet static
	address 10.8.255.2/16
	ovs_options tag=8
	ovs_type OVSIntPort
	ovs_bridge ovsbr0

allow-ovsbr0 services
iface services inet static
	address 10.64.255.2/16
	ovs_options tag=64
	ovs_type OVSIntPort
	ovs_bridge ovsbr0